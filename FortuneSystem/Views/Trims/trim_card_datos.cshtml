@model IEnumerable<FortuneSystem.Models.Trims.Pedidos_trim_card>
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="@Server.MapPath("~/Content/bootstrap-theme.css")" rel="stylesheet" />
    <link href="@Server.MapPath("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Server.MapPath("~/Content/base_m.css")" rel="stylesheet" />

    <style>
        body {
            font-family: sans-serif;
        }

        td {
            margin-right: 1em;
        }
        .rotate90 {
            -webkit-transform: rotate(90deg);
            -moz-transform: rotate(90deg);
            -o-transform: rotate(90deg);
            -ms-transform: rotate(90deg);
            transform: rotate(90deg);
        }
    </style>
</head>
@{
    int total_estilos = 0, total_generos = 0, contador;
    string item_descripcion;
} 
<body>
    <div class="container-fluid" style="margin-right:0px; padding-right:0px;">
        @foreach (var item in Model)
            {


        <div style=" width:100%; ">
            <div style="width:35%; float:left; border-right:solid 1px black;" class="row">
                <div style="margin:0px; font-weight:bold;">
                    <div style="font-size:1.5em; float:left; text-align:center; margin-right:2em;">FFB<p style="font-size:0.5em;">FORTUNE FASHIONS BAJA</p></div>
                    <div style="font-size:1.5em; float:left; text-align:center; margin-right:1em;">TRIM CARD</div>
                    <div><img src="~/Content/img/logo_small.png" style="width:100px; height:55px; " /></div>
                </div><!--ROW 1-->

                <div id="po_estilos" class="row" style="width:100%; margin:0px; font-size:0.9em;">
                    <div style="float:left;  width:49%;  ">
                        <p>PO# <label style="text-decoration:underline;">@item.pedido </label> </p>
                        <p>CUSTOMER: <label style="text-decoration:underline;">@item.customer </label></p>
                        <p>STYLES: <label style="text-decoration:underline; letter-spacing: -1.4px; word-spacing: -1.4px;">
                                @foreach (var e in item.lista_estilos)
                                {
                                    total_estilos++;
                                }
                              
                                @{ contador = 1;
                                }
                                @foreach (var e in item.lista_estilos)
                                {
                                    @e.descripcion
                                    if (contador != total_estilos){
                                        <label>, </label>
                                    }
                                    contador++;
                                }
                            </label>
                        </p>
                    </div>
                    <div style="float:left;  width:49%; padding-right:2em; ">
                        <p>MADE BY: @item.usuario</p>
                        <p style="text-decoration:underline;"> @item.usuario</p>
                        <p>GENDER:</p>
                        <p style="text-decoration:underline;">
                            @{ contador = 1;
                            }
                            @foreach (var e in item.lista_generos)
                            {
                                @e.genero
                                if (contador != total_generos)
                                {
                                    <label>, </label>
                                }
                                contador++;
                            }
                        </p>
                    </div>
                </div><!--ROW 2-->

                <div id="price_ticket" class="row" style="margin:0px; width:100%; height:40em;  font-size:0.9em; border-top:1px solid black; padding-top:1em;">
                    <div style="width:25%; float:left; "> PRICE TICKET </div>
                    <div style="float:right; width:65%;  ">
                        @foreach (var f in item.lista_familias)
                        {
                            if (f.id_family_trim == 32)
                            {
                                <b>Apply PT:&nbsp;</b>@f.especial
                            }
                        }
                    </div>
                    @foreach (var f in item.lista_familias)
                    {
                        if (f.id_family_trim == 32)
                        {
                            <img src="~/Content/img/Trims/@f.imagen" alt="@f.imagen" style="width:auto; height:70%; " />
                        }                       
                    }
                </div><!--ROW 3-->

                <div id="price_ticket" class="row" style="margin:0px; width:100%;  font-size:1em; border-top:1px solid black; word-wrap: break-word; padding-top:1em;">
                    @foreach (var f in item.lista_familias)
                    {
                        if (f.id_family_trim == 32)
                        {
                       <p>Notes: @f.notas</p> 
                        }
                    }
                   
                </div><!--ROW 4-->
            </div><!--COLUMNA 1-->
            <!------------------------------------------------------------------>
            <div style="width:60%; float:left; margin-left:0em; padding-left:1em;  ">
                <div class="row" style="margin-left:0em; padding-left:0em; ">
                    <div style="width:40%; height:45em; float:left; margin-left:1em;  ">
                        <div class="row" style=" padding-left:1em; height:16em; border-bottom:1px solid black;">
                            <!--ROW 1-->
                            <div style=" float:left; ">HOUSE LABEL</div>
                            <div style="float:right;   margin-right:2em; ">
                                @foreach (var f in item.lista_familias)
                                {
                                    if (f.id_family_trim == 37)
                                    {
                                        <p> @f.especial</p>
                                    }
                                }
                            </div>
                            @foreach (var f in item.lista_familias)
                            {
                                if (f.id_family_trim == 37)
                                {
                            <img src="~/Content/img/Trims/@f.imagen" alt="@f.imagen" style="width:50%; height:auto; " />
                                }
                            }
                        </div><!--ROW 1-->

                        <div class="row" style=" padding-left:1em; height:15em; padding-top:0.5em; border-bottom:1px solid black; ">
                            <!--ROW 2-->
                            <div style=" float:left; ">GLOW IN THE DARK</div>
                            <div style="float:right;  margin-right:2em; ">
                                @foreach (var f in item.lista_familias)
                                {
                                    if (f.id_family_trim == 53)
                                    {
                                        <p> @f.especial</p>
                                    }
                                }
                            </div>
                            @foreach (var f in item.lista_familias)
                            {
                                if (f.id_family_trim == 37)
                                {
                            <img src="~/Content/img/Trims/@f.imagen" alt="@f.imagen" style="width:100%; height:auto; " />
                                }
                            }
                        </div><!--ROW 2-->

                        <div class="row" style=" padding-left:1em; height:5em; padding-top:0.5em; border-bottom:1px solid black; ">
                            <!--ROW 3-->
                            BULLET:
                            @foreach (var f in item.lista_familias)
                            {
                                if (f.id_family_trim == 3)
                                {
                                    <img src="~/Content/img/Trims/@f.imagen" alt="@f.imagen" style="width:15em; height:auto; "   />
                                }
                            }
                        </div><!--ROW 3-->

                        <div class="row" style=" padding-left:1em;  padding-top:0.5em;  ">
                            <!--ROW 4-->                                
                                    @if (item.tipo_empaque == 1)
                                    {
                                        <p>BULK:&nbsp; </p>
                                    }
                                    else
                                    {
                                        if (item.tipo_empaque == 2)
                                        {
                                            <p>PPK:&nbsp; </p>
                                        }
                                        else
                                        {
                                            <p>ASSORT:&nbsp; </p>
                                        }
                                    }
                            <br /><p>RATIO:@item.ratio</p>
                            <p>FOLD SIZE: @item.fold_size</p>
                        </div><!--ROW 4-->
                    </div><!--columna 1-->

                    <div style="width:27%; height:45em; float:left; margin-left:1em; border-left:solid 1px black; ">
                        <div class="row" style="margin:0px; padding:0px;">
                            <p>SIZE STRIP &nbsp; </p>
                            @foreach (var f in item.lista_familias)
                            {
                                if (f.id_family_trim == 28)
                                {
                                    <p> @f.especial</p>
                                    <img src="~/Content/img/Trims/@f.imagen" alt="@f.imagen" style="width:100%; height:auto; " />
                                }
                            }
                        </div>
                    </div><!--columna 2-->

                    <div style="width:28%;height:45em; float:left;  ">
                        <div class="row" style=" padding-left:1em; height:16em; border-bottom:1px solid black;">
                            <!--ROW 1-->
                        </div><!--ROW 1-->
                        <div class="row" style=" padding-left:1em; height:17em; padding-top:0.5em; border-bottom:1px solid black;  border-left:1px solid black; ">
                            <!--ROW 2-->
                            <p>SIZER &nbsp; </p>
                            @foreach (var f in item.lista_familias)
                            {
                                if (f.id_family_trim ==19)
                                {
                                    <p> @f.especial</p>
                                    <img src="~/Content/img/Trims/@f.imagen" alt="@f.imagen" style="width:100%; height:auto; " />
                                }
                            }
                        </div><!--ROW 2-->
                        <div class="row" style=" padding-left:1em; height:12em; padding-top:0.5em;  border-left:1px solid black; border-left:1px solid black; ">
                            <p>HANGERS: &nbsp; </p>
                            @foreach (var f in item.lista_familias)
                            {
                                if (f.id_family_trim == 11)
                                {
                                    <p> @f.especial</p>                                    
                                }
                            }
                            <br />                           
                            <table style="padding:.5em !important; font-size:0.8em; ">
                                <tr>
                                    <td>&nbsp;TYPE&nbsp; </td>
                                    <td>&nbsp;SIZE &nbsp; </td>
                                    <td>&nbsp;COLOR&nbsp; </td>
                                </tr>
                            </table>
                        </div><!--ROW 3-->
                    </div><!--columna 3-->
                </div><!--ROW 1-->




                <div class="row" style="width:100%;  border-top: solid 1px black; margin-left:0.1em; ">

                    <div style="width:40%; height:20em; /*background:red;*/ float:left; ">

                        <div class="row" style="padding-left:1em !important; border-bottom: solid 1px black; margin-left:0.1em;  margin-right:0.10em; padding-bottom:0.5em !important; padding-top:0.5em;">
                            <p>POLYBAG: &nbsp; </p> 
                            @foreach (var f in item.lista_familias)
                            {
                                if (f.id_family_trim == 11)
                                {
                                    <label> @f.especial</label>
                                    <p> @f.item</p>
                                }
                            }
                            
                        </div>
                        <div class="row" style="padding-left:0.5em !important; border-bottom: solid 1px black; margin-left:0.1em; padding-top:0.5em !important;margin-right:0.10em;">

                            <table style="padding:1.5em !important;">
                                <tr>
                                    <td>&nbsp;BOX:&nbsp; </td>
                                    <td style=" padding-left:1em;"> </td>
                                    <td style=" padding-left:1em;"> </td>
                                    <td>FILL &nbsp; </td>
                                    <td style="border: solid 2px black; padding-left:1.5em;"> </td>
                                    <td style=" padding-left:1em;"> </td>
                                </tr>
                            </table>
                            @foreach (var f in item.lista_familias)
                            {
                                if (f.id_family_trim == 11)
                                {
                                    <p> @f.item;</p>
                                }
                            }
                            <p>___________________________________</p>
                            
                        </div>
                        <div class="row" style="padding-left:0.1em !important; border-bottom: solid 1px black; margin-left:0.1em; margin-right:.10em;">
                            <p>&nbsp;DATE:</p><p></p>
                        </div>
                        <div class="row" style="padding-left:0.5em !important; border-bottom: solid 1px black; margin-left:0.1em; margin-right:.10em;">
                            <p>&nbsp;CHECKED BY TRIMS</p><p></p>
                        </div>
                        <div class="row" style="padding-left:0.5em !important; border-bottom: solid 1px black; margin-left:0.1em; margin-right:.10em;">
                            <p>&nbsp;CHECKED BY QC</p><p></p>
                        </div>
                        <div class="row" style="padding-left:1em !important;">
                            <p>&nbsp;CHECKED BY PACKING</p>
                        </div>

                    </div><!--columna 1-->




                    <div style="width:30%; height:20em; /*background:green*/; float:left; border-left: solid 1px black; padding-top:0.5em;">
                        <p>&nbsp;POLYBAG STICKER&nbsp; </p> 
                    @foreach (var f in item.lista_familias)
                        {
                            if (f.id_family_trim == 50)
                            {
                               <p>@f.especial</p>
                               <img src="~/Content/img/Trims/@f.imagen" alt="@f.imagen" style="width:100%; height:auto; " />
                              }
                          }
                        
                    </div><!--columna 2-->

                    <div style="width:30%; height:20em; /*background:yellow;*/ float:left; border-left: solid 1px black; padding-top:0.5em;">
                        <p>&nbsp;HANG TAG&nbsp; </p>
                        @foreach (var f in item.lista_familias)
                        {
                            if (f.id_family_trim == 12)
                            {
                                <p>@f.especial</p>
                                <img src="~/Content/img/Trims/@f.imagen" alt="@f.imagen" style="width:100%; height:auto; " />
                            }
                        }

                    </div><!--columna 3-->

                </div><!--renglón 2-->
            </div><!--COLUMNA 2-->
            <p style="float:right;">DOCUMENTO CONTROLADO - ÚNICAMENTE SE PUEDE MODIFICAR POR EL SUPERVISOR DE TRIMS</p>

        </div><!--TODO-->
            



       
            }

        }

        
</body>
</html>
