        $(".estilo_cst").html("<b>Style:</b> " + $('#tabla_estilos_customer_staging tr:eq(' + row + ') td:eq(1)').html() + " " + $('#tabla_estilos_customer_staging tr:eq(' + row + ') td:eq(2)').html());
