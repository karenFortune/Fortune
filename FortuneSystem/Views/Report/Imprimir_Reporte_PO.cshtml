@model IEnumerable<FortuneSystem.Models.POSummary.POSummary>
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css" integrity="sha384-y3tfxAZXuh4HwSYylfB+J125MxIs6mR5FOHamPBG064zB+AFeWH94NdvaCBm8qnd" crossorigin="anonymous">
    <style>
        body {
            font-family: sans-serif;
        }

        .under_line {
            border-bottom: 1px solid black;
            text-align: center;
            padding-left: 1em;
            padding-right: 1em;
        }

        .texto_t {
            color: black;
            font-weight: bold;
            text-align: center;
			 font-size: 12px;
        }

        .texto_cabecera_derecha {
            font-weight: bold;
            text-align: right;
        }

        .texto {
            font-size: 10px;
        }

        .table_tallas {
            border-collapse: collapse;
            font-size: 9px;
        }

            .table_tallas td {
                border: 1px solid black;
                text-align: center;
            }

        .texto_izquiera {
            text-align: left !important;
        }
        table.table-bordered {
            border: 1px solid #B4B2B2;
            margin-top: 20px;
        }

            table.table-bordered > thead > tr > th {
                border: 0px solid #B4B2B2;	
            }   

        table.table-bordered > tbody > tr > td {
            border: 1px solid #0c0c0c;
        }

        table.table-bordered > tbody > tr > th {
            border: 1px solid #0c0c0c;
        } 

		        #tablaRepEstilo {
            border: 1px solid #B4B2B2;
            
        }

            #tablaRepEstilo > thead > tr > th {
                border: 0px solid #B4B2B2;	
            }   

        #tablaRepEstilo > tbody > tr > td {
            border: 1px solid #0c0c0c;
			width: 180px;
        }

        #tablaRepEstilo > tbody > tr > th {
            border: 1px solid #0c0c0c;
			width: 180px;
        } 
		
		#tablaDatEstilo {
            border: 1px solid #B4B2B2;
            
        }

            #tablaDatEstilo > thead > tr > th {
                border: 0px solid #B4B2B2;	
            }   

        #tablaDatEstilo > tbody > tr > td {
            border: 1px solid #0c0c0c;
			width: 160px;
        }

        #tablaDatEstilo > tbody > tr > th {
            border: 1px solid #0c0c0c;
			width: 160px;
        }

        #tablaSize > tbody > tr > th {
            border: 1px solid #0c0c0c;
            width: 160px;
        }

        #tablaSize > tbody > tr > td {
            border: 1px solid #0c0c0c;
            width: 160px;
        }
        .cabecera_inventario {
            color: black;
            background: #B4B2B2;
            text-align: center;
			 font-size: 15px;
        }

        .encabezado {
            text-align: center;
        }

        .esp {
            color: darkred;
			font-size: 20px;
			text-align: center;
        }
    </style>
</head>
<body>
    @{ //VARIABLES
        int cantQty = 0, cantExtra = 0, totalPcs = 0, numCTN = 0, numUPC = 0;

    }

    @foreach (var item in Model)
    {
  
        @*Informacion de datos para encabezado *@
      
            <div  style=" float:left; width: 100px; height: 40px;">
                @foreach (var item_Tallas in item.ListarTallasPorEstilo)
                {

                    totalPcs += @item_Tallas.Cantidad;
                }

                <p style=" height: 40px; font-size:25px; text-align: center; font-family:'Times New Roman', Times, serif; font-weight:normal;text-shadow: 0px 1px 2px #777;">@totalPcs</p>

            </div>
            <div style="width:630px; float:left;  ">
                <p style=" height: 40px; font-size:25px; text-align:center; font-family:'Times New Roman', Times, serif; font-weight:normal;text-shadow: 0px 1px 2px #777;">@Html.DisplayFor(modelItem => item.Pedidos.PO)</p>
            </div>
            <div  style="width:200px; float:left;">
                <p style=" height: 40px; font-size:25px; text-align: center;  font-family:'Times New Roman', Times, serif; font-weight:normal;text-shadow: 0px 1px 2px #777;"> @Html.DisplayFor(modelItem => item.Pedidos.FechaFinalOrden)</p>
            </div>
        @*Tabla de informacion del estilo*@
        <table class="" id="tablaRepEstilo" style="padding: 20px; margin: 5px auto;">
            <thead class="cabecera_inventario">
                <tr>
                    <th class="encabezado">
                        ITEM #
                    </th>
                    <th class="encabezado">
                        ITEM DESCRIPTION
                    </th>
                    <th class="encabezado">
                        @Html.DisplayNameFor(model => model.CatColores.CodigoColor)
                    </th>
                    <th class="encabezado">
                        COLOR DESCRIPTION
                    </th>
                    <th class="encabezado">
                        @Html.DisplayNameFor(model => model.Cantidad)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="texto_t">
                        @Html.DisplayFor(modelItem => item.EstiloItem)
                    </td>
                    <td class="texto_t">
                        @Html.DisplayFor(modelItem => item.ItemDescripcion.Descripcion)
                    </td>
                    <td class="texto_t">
                        @Html.DisplayFor(modelItem => item.CatColores.CodigoColor)
                    </td>
                    <td class="texto_t">
                        @Html.DisplayFor(modelItem => item.CatColores.DescripcionColor)
                    </td>
                    <td class="texto_t">
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-1" style=" float:left; width: 750px; height: 210px; border: 0px solid #0c0c0c; ">
                @*Tabla de informacion de datos del estilo*@
                <table class="" id="tablaDatEstilo" style=" border: 0px solid #0c0c0c;">
                    <thead class="cabecera_inventario">
                        <tr>
                            <th class="encabezado">
                                FABRIC TYPE
                            </th>
                            <th class="encabezado">
                                FIBER
                            </th>
                            <th class="encabezado">
                                YARN SIZE
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
							<td class="texto_t">
								@Html.DisplayFor(modelItem => item.CatTela.Tela)
							</td>
                            <td class="texto_t">
                                -
                            </td>
                            <td class="texto_t">
                                -
                            </td>
                        </tr>
                    </tbody>
                </table>
                @*Descripcion de especialidad*@
                    <div class="esp"> @Html.DisplayFor(modelItem => item.CatEspecialidades.Especialidad)</div>
                 @*Tabla de lista de tallas*@
                <table class="" id="tablaSize"  style=" border: 0px solid #0c0c0c;">
                    <thead>  </thead>
                    <tbody>
                        <tr>
                            <th class="cabecera_inventario"  style="text-align:right; ">SIZE:</th>

                            @foreach (var item_Tallas in item.ListarTallasPorEstilo)
                            {
                                <th class="cabecera_inventario">@item_Tallas.Talla </th>
                            }

                            <th class="cabecera_inventario" > TOTAL </th>
                        </tr>
                        <tr>
                            <th class="cabecera_inventario" width="190px;"  style="text-align:right">QUANTITY:</th>

                            @foreach (var item_Tallas in item.ListarTallasPorEstilo)
                            {
                                <th class="texto_t" >@item_Tallas.Cantidad </th>
                                cantQty += @item_Tallas.Cantidad;
                            }

                            <td class="texto_t">@cantQty</td>
                        </tr>
                        <tr>
                            <th class="cabecera_inventario" width="190px;" style="text-align:right">EXTRAS/DAÑADAS:</th>

                            @foreach (var item_Tallas in item.ListarTallasPorEstilo)
                            {
                                <th class="texto_t">@item_Tallas.Extras </th>
                                cantExtra += @item_Tallas.Extras;
                            }

                            <td class="texto_t">@cantExtra</td>
                        </tr>
                        <tr>
                            <th class="cabecera_inventario" width="190px;" style="text-align:right">QTY/CTN:</th>

                            @foreach (var item_Tallas in item.ListarTallasPorEstilo)
                            {
                                <th class="texto_t">0 </th>
                                numCTN += 0;
                            }

                            <td class="texto_t">@numCTN</td>
                        </tr>
                        <tr>
                            <th class="cabecera_inventario" width="190px;" style="text-align:right">UPC:</th>

                            @foreach (var item_Tallas in item.ListarTallasPorEstilo)
                            {
                                <th class="texto_t">0 </th>
                                numUPC += 0;
                            }

                            <td class="texto_t">@numUPC</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div  style="width: 180px; height: 180px; float:left;">
                <br />
                <img src="@Url.Action("ConvertirImagenArteEstilo", "Arte", new {nombreEstilo= item.EstiloItem})" style="width:160px;height:160px;" />
            </div>			
        </div>
    }
</body>
</html>
